{
  "name" : "Harlem Shake -- With Page Actions",
  "version" : "1.0.2",
  "description" : "Makes pages which contain the word 'Harlem' do the Harlem shake",
  "permissions": [
    "https://*/*"
  ],
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "highlighter.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "highlighter.png"
  },
  "content_scripts" : [
    {
      "matches" : [ "https://*/*" ],
      "js" : ["jquery-1.4.2.min.js", "contentscript.js"],
      "css": ["extension.css"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "manifest_version": 2
}
